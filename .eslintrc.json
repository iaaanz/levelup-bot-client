{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "plugins": ["eslint-plugin-prettier"],
  "extends": ["airbnb-base", "eslint-config-prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": "error",
    "max-len": ["error", { "code": 100, "ignoreUrls": true }],
    "quotes": ["error", "single"],
    "import/prefer-default-export": "off",
    "jsx-quotes": ["error", "prefer-single"],
    "global-require": 0
  }
}
